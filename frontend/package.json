{
	"name": "trackivity-v2",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"node": ">=18.0.0"
	},
	"scripts": {
		"dev": "npm run db:push && vite dev",
		"dev:node": "drizzle-kit push && vite dev",
		"dev:db": "npm run db:push && vite dev",
		"dev:db:migrate": "npm run db:migrate && vite dev",
		"dev:watch": "npm run dev",
		"build": "vite build",
		"start": "NODE_ENV=production PORT=${PORT:-8080} node build/index.js",
		"start:dev": "node build/index.js",
		"start:cloud": "NODE_ENV=production node build/index.js",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "prettier --check . && eslint .",
		"lint:fix": "eslint . --fix",
		"db:start": "docker compose up",
		"db:push": "drizzle-kit push",
		"db:generate": "drizzle-kit generate",
		"db:migrate": "drizzle-kit migrate",
		"db:studio": "drizzle-kit studio",
		"create-super-admin": "tsx scripts/create-super-admin.ts",
		"loadtest": "tsx scripts/loadtest.ts",
		"clean": "rm -rf node_modules/.cache dist build .svelte-kit"
	},

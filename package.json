{
	"name": "trackivity-v2",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"engines": {
		"bun": ">=1.2.0",
		"node": ">=18.0.0"
	},
	"scripts": {
		"dev": "bun run db:push && vite dev",
		"dev:node": "drizzle-kit push && vite dev",
		"dev:db": "bun run db:push && vite dev",
		"dev:db:migrate": "bun run db:migrate && vite dev",
		"dev:watch": "bun --hot --watch src run dev",
		"build": "vite build",
		"build:bun": "bun build --target=bun --outdir=dist src/app.ts",
		"start": "NODE_ENV=production PORT=${PORT:-8080} node build/index.js",
		"start:dev": "bun build/index.js",
		"start:cloud": "NODE_ENV=production bun build/index.js",
		"preview": "vite preview",
		"prepare": "bunx svelte-kit sync || echo ''",
		"check": "bunx svelte-kit sync && bunx svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "bunx svelte-kit sync && bunx svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "bunx prettier --write .",
		"format:check": "bunx prettier --check .",
		"lint": "bunx prettier --check . && bunx eslint .",
		"lint:fix": "bunx eslint . --fix",
		"db:start": "docker compose up",
		"db:push": "bunx drizzle-kit push",
		"db:generate": "bunx drizzle-kit generate",
		"db:migrate": "bunx drizzle-kit migrate",
		"db:studio": "bunx drizzle-kit studio",
		"create-super-admin": "bun run scripts/create-super-admin.ts",
		"loadtest": "bun run scripts/loadtest.ts",
		"install:bun": "bun install",
		"clean": "rm -rf node_modules/.cache dist build .svelte-kit"
	},
	"devDependencies": {
		"@sveltejs/adapter-vercel": "^5.5.2",
		"@dnd-kit-svelte/core": "^0.0.8",
		"@dnd-kit-svelte/modifiers": "^0.0.8",
		"@dnd-kit-svelte/sortable": "^0.0.8",
		"@dnd-kit-svelte/utilities": "^0.0.8",
		"@eslint/compat": "^1.3.2",
		"@eslint/js": "^9.35.0",
		"@internationalized/date": "^3.9.0",
		"@lucide/svelte": "^0.541.0",
		"@sveltejs/kit": "^2.37.1",
		"@sveltejs/vite-plugin-svelte": "^6.1.4",
		"@tabler/icons-svelte": "^3.34.1",
		"@tailwindcss/vite": "^4.1.13",
		"@tanstack/table-core": "^8.21.3",
		"@types/d3-scale": "^4.0.9",
		"@types/d3-shape": "^3.1.7",
		"@types/node": "^22.18.1",
		"bits-ui": "^2.9.6",
		"clsx": "^2.1.1",
		"d3-scale": "^4.0.2",
		"d3-shape": "^3.2.0",
		"drizzle-kit": "^0.30.6",
		"embla-carousel-svelte": "^8.6.0",
		"eslint": "^9.35.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.12.1",
		"formsnap": "^2.0.1",
		"globals": "^16.3.0",
		"layerchart": "^2.0.0-next.37",
		"mode-watcher": "^1.1.0",
		"paneforge": "^1.0.2",
		"prettier": "^3.6.2",
		"prettier-plugin-svelte": "^3.4.0",
		"prettier-plugin-tailwindcss": "^0.6.14",
		"svelte": "^5.38.7",
		"svelte-check": "^4.3.1",
		"svelte-sonner": "^1.0.5",
		"sveltekit-superforms": "^2.27.1",
		"tailwind-merge": "^3.3.1",
		"tailwind-variants": "^3.1.0",
		"tailwindcss": "^4.1.13",
		"tsx": "^4.20.5",
		"tw-animate-css": "^1.3.8",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.42.0",
		"vaul-svelte": "^1.0.0-next.7",
		"vite": "^7.1.4",
		"zod": "^3.25.76"
	},
	"dependencies": {
		"@neondatabase/serverless": "^1.0.1",
		"@types/argon2": "^0.15.4",
		"@types/jsonwebtoken": "^9.0.10",
		"@types/qrcode": "^1.5.5",
		"argon2": "^0.44.0",
		"date-fns": "^4.1.0",
		"drizzle-orm": "^0.40.1",
		"jsonwebtoken": "^9.0.2",
		"jsqr": "^1.4.0",
		"postgres": "^3.4.7",
		"qrcode": "^1.5.4"
	}
}
